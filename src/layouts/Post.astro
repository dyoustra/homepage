---
import Base from './Base.astro';

interface Props {
  title: string;
  description?: string;
  date: Date;
  tags?: string[];
}

const { title, description, date, tags = [] } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={title} description={description}>
  <article>
    <header>
      <h1>{title}</h1>
      <div class="meta">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        {tags.length > 0 && (
          <div class="tags">
            {tags.map((tag) => (
              <a href={`/tags/${tag}`}>#{tag}</a>
            ))}
          </div>
        )}
      </div>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Base>

<style>
  header {
    margin-bottom: 2rem;
  }
  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }
  .meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    color: var(--muted);
    font-size: 0.9rem;
  }
  .tags {
    display: flex;
    gap: 0.5rem;
  }
  .tags a {
    color: var(--muted);
  }
  .tags a:hover {
    color: var(--accent);
  }
  .content {
    line-height: 1.8;
  }
  .content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  .content :global(p) {
    margin-bottom: 1rem;
  }
  .content :global(pre) {
    background: var(--border);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }
  .content :global(code) {
    font-family: 'SF Mono', Consolas, monospace;
    font-size: 0.9em;
  }
  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
</style>
