---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<Base title="Home">
  <h1>Welcome</h1>
  <p class="intro">This is my personal blog where I write about things I find interesting.</p>

  <h2>Recent Posts</h2>
  <ul class="posts">
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.id}`}>{post.data.title}</a>
        <time>{post.data.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
      </li>
    ))}
  </ul>
  <p><a href="/blog">View all posts &rarr;</a></p>
</Base>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .intro {
    color: var(--muted);
    margin-bottom: 2rem;
  }
  h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }
  .posts {
    list-style: none;
    margin-bottom: 1rem;
  }
  .posts li {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border);
  }
  .posts time {
    color: var(--muted);
    font-size: 0.85rem;
  }
</style>
